{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Batch compute environment",
  "Parameters": {
    "appName": {
      "Description": "Application name",
      "Type": "String",
      "Default": "myapp"
    },
    "env": {
      "Description": "Environment",
      "Type": "String",
      "Default": "dev"
    },
    "vpcId": {
      "Description": "VPC ID",
      "Type": "String"
    },
    "subnetIds": {
      "Description": "Subnet IDs (public)",
      "Type": "CommaDelimitedList"
    },
    "permissionsBoundaryName": {
      "Description": "Permissions boundary",
      "Type": "String",
      "Default": "NONE"
    },
    "storageBucketName": {
      "Description": "Name of storage bucket",
      "Type": "String"
    },
    "dbSecretName": {
      "Description": "Name of secret for database credentials",
      "Type": "String"
    },
    "notifyTopicArn": {
      "Description": "Arn of notification topic",
      "Type": "String"
    }
  },
  "Conditions": {
    "PermissionsBoundaryExists": {
      "Fn::Not": [{
        "Fn::Equals": [ { "Ref": "permissionsBoundaryName" }, "NONE" ]
      }]
    }
  },
  "Resources": {
    "SecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "EC2 Security Group for instances launched by Batch",
        "VpcId": {
          "Ref": "vpcId"
        }
      }
    },
    "ServiceRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": {
          "Fn::Join": [
            "-",
            [
              { "Ref": "appName" },
              { "Ref": "env" },
              "batch-service-role"
            ]
          ]
        },
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "batch.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/service-role/AWSBatchServiceRole"
        ],
        "PermissionsBoundary": {
          "Fn::If": [
            "PermissionsBoundaryExists",
            { "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:policy/${permissionsBoundaryName}" },
            { "Ref": "AWS::NoValue" }
          ]
        }
      }
    },
    "ExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": {
          "Fn::Join": [
            "-",
            [
              { "Ref": "appName" },
              { "Ref": "env" },
              "batch-execution-role"
            ]
          ]
        },
        "AssumeRolePolicyDocument": {
          "Version": "2008-10-17",
          "Statement": [
            {
              "Sid": "",
              "Effect": "Allow",
              "Principal": {
                "Service": "ecs-tasks.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/service-role/AmazonECSTaskExecutionRolePolicy"
        ],
        "PermissionsBoundary": {
          "Fn::If": [
            "PermissionsBoundaryExists",
            { "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:policy/${permissionsBoundaryName}" },
            { "Ref": "AWS::NoValue" }
          ]
        }
      }
    },
    "JobRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": {
          "Fn::Join": [
            "-",
            [
              { "Ref": "appName" },
              { "Ref": "env" },
              "batch-job-role"
            ]
          ]
        },
        "AssumeRolePolicyDocument": {
          "Version": "2008-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "ecs-tasks.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "sns",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "sns:Publish"
                  ],
                  "Resource": {
                    "Ref": "notifyTopicArn"
                  }
                }
              ]
            }
          },
          {
            "PolicyName": "ses",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "ses:SendEmail"
                  ],
                  "Resource": "*"
                }
              ]
            }
          }
        ],
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/service-role/AmazonECSTaskExecutionRolePolicy",
          "arn:aws:iam::aws:policy/AmazonS3FullAccess",
          "arn:aws:iam::aws:policy/SecretsManagerReadWrite"
        ],
        "PermissionsBoundary": {
          "Fn::If": [
            "PermissionsBoundaryExists",
            { "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:policy/${permissionsBoundaryName}" },
            { "Ref": "AWS::NoValue" }
          ]
        }
      }
    },
    "JobDefinition": {
      "Type": "AWS::Batch::JobDefinition",
      "Properties": {
        "Type": "container",
        "JobDefinitionName": {
          "Fn::Join": [
            "-",
            [
              { "Ref": "appName" },
              { "Ref": "env" },
              "batch-job-definition"
            ]
          ]
        },
        "PlatformCapabilities": [
          "FARGATE"
        ],
        "ContainerProperties": {
          "Image": {
            "Fn::Sub": "${AWS::AccountId}.dkr.ecr.${AWS::Region}.amazonaws.com/${Repository}:latest"
          },
          "ExecutionRoleArn": {
            "Fn::GetAtt": [
              "ExecutionRole",
              "Arn"
            ]
          },
          "JobRoleArn": {
            "Fn::GetAtt": [
              "JobRole",
              "Arn"
            ]
          },
          "FargatePlatformConfiguration": {
            "PlatformVersion": "LATEST"
          },
          "ResourceRequirements": [
            {
              "Type": "MEMORY",
              "Value": 8192
            },
            {
              "Type": "VCPU",
              "Value": 2
            }
          ],
          "Command": [
            "node",
            "index.js"
          ],
          "NetworkConfiguration": {
            "AssignPublicIp": "ENABLED"
          },
          "Environment": [
            {
              "Name": "DEBUG",
              "Value": "aktemp-*"
            },
            {
              "Name": "REGION",
              "Value": { "Ref": "AWS::Region" }
            },
            {
              "Name": "STORAGE_BUCKET",
              "Value": { "Ref": "storageBucketName" }
            },
            {
              "Name": "DB_SECRET",
              "Value": { "Ref": "dbSecretName" }
            },
            {
              "Name": "NOTIFY_TOPIC",
              "Value": { "Ref": "notifyTopicArn" }
            },
            {
              "Name": "NODE_OPTIONS",
              "Value": "--max-old-space-size=8192"
            }
          ]
        },
        "RetryStrategy": {
          "Attempts": 1
        }
      }
    },
    "JobQueue": {
      "Type": "AWS::Batch::JobQueue",
      "Properties": {
        "JobQueueName": {
          "Fn::Join": [
            "-",
            [
              { "Ref": "appName" },
              { "Ref": "env" },
              "batch-job-queue"
            ]
          ]
        },
        "Priority": 1,
        "ComputeEnvironmentOrder": [
          {
            "Order": 1,
            "ComputeEnvironment": {
              "Ref": "ComputeEnvironment"
            }
          }
        ]
      }
    },
    "ComputeEnvironment": {
      "Type": "AWS::Batch::ComputeEnvironment",
      "Properties": {
        "ComputeEnvironmentName": {
          "Fn::Join": [
            "-",
            [
              { "Ref": "appName" },
              { "Ref": "env" },
              "batch-compute-environment"
            ]
          ]
        },
        "Type": "MANAGED",
        "ComputeResources": {
          "Type": "FARGATE",
          "MaxvCpus": 8,
          "Subnets": {
            "Ref": "subnetIds"
          },
          "SecurityGroupIds": [
            {
              "Ref": "SecurityGroup"
            }
          ]
        },
        "ServiceRole": {
          "Ref": "ServiceRole"
        }
      }
    },
    "Repository": {
      "Type": "AWS::ECR::Repository",
      "Properties": {
        "RepositoryName": {
          "Fn::Join": [
            "-",
            [
              { "Ref": "appName" },
              { "Ref": "env" },
              "batch"
            ]
          ]
        }
      }
    }
  },
  "Outputs": {
    "ComputeEnvironmentArn": {
      "Description": "Compute environment Arn",
      "Value": { "Ref": "ComputeEnvironment" }
    },
    "JobQueueName": {
      "Description": "Job queue name",
      "Value": {
        "Fn::Join": [
          "-",
          [
            { "Ref": "appName" },
            { "Ref": "env" },
            "batch-job-queue"
          ]
        ]
      }
    },
    "JobDefinitionName": {
      "Description": "Job definition name",
      "Value": {
        "Fn::Join": [
          "-",
          [
            { "Ref": "appName" },
            { "Ref": "env" },
            "batch-job-definition"
          ]
        ]
      }
    },
    "RepositoryUrl": {
      "Description": "Batch repository URL",
      "Value": {
        "Fn::Sub": "${AWS::AccountId}.dkr.ecr.${AWS::Region}.amazonaws.com/${Repository}"
      }
    }
  }
}